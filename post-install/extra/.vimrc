" syntax highlighting on
syntax on

" show line numbers
set number

" set status bar
set laststatus=2

" auto indent on
filetype plugin indent on

" show existing tab with 4 spaces width
set tabstop=2

" when indenting with '>', use 4 spaces width
set shiftwidth=2

" On pressing tab, insert 4 spaces
set expandtab

colorscheme papercolor
